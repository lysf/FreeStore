<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/list_item_selector"
    android:paddingLeft="@dimen/dimen_16dp"
    android:paddingRight="@dimen/dimen_18dp"
    android:paddingTop="@dimen/dimen_8dp">

    <include
        android:id="@+id/game_brand_icon"
        layout="@layout/simple_image_normal_overlay_roundcorner"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/dimen_12dp" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_toRightOf="@id/game_brand_icon"
        android:ellipsize="end"
        android:lines="2"
        android:textColor="@color/primary_text_color"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_price_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_name"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@id/game_brand_icon"
        android:text="@string/yuan_char"
        android:textColor="@color/red"
        android:textSize="12sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_name"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/tv_price_header"
        android:text="528"
        android:textColor="@color/red"
        android:textSize="20sp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/tv_member"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dimen_16dp"
        android:layout_below="@id/tv_name"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="17dp"
        android:layout_toRightOf="@id/tv_price"
        android:background="@drawable/goods_message_h"
        android:paddingLeft="10dp"
        android:paddingRight="6dp"
        android:textColor="@color/red"
        android:textSize="@dimen/discount"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/tv_discounts"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dimen_16dp"
        android:layout_below="@id/tv_name"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="17dp"
        android:layout_toRightOf="@id/tv_member"
        android:background="@drawable/goods_message_h"
        android:paddingLeft="10dp"
        android:paddingRight="6dp"
        android:textColor="@color/red"
        android:textSize="@dimen/discount"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_sock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_name"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="@dimen/dimen_18dp"
        android:layout_marginTop="42dp"
        android:text="fdsf"
        android:textColor="@color/general_text_color"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_ordinary_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_price"
        android:layout_marginBottom="@dimen/dimen_18dp"
        android:layout_marginTop="@dimen/dimen_4dp"
        android:layout_toRightOf="@id/game_brand_icon"
        android:textColor="@color/general_text_color"
        android:textSize="12sp" />


    <include
        layout="@layout/common_horizontal_line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentBottom="true" />
</RelativeLayout>