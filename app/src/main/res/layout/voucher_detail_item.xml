<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="10dp"
    android:paddingRight="20dp"
    android:background="@color/white">

    <TextView
        android:id="@+id/tv_record_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="16dp"
        android:textColor="@color/black"
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/tv_record_create"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_record_desc"
        android:layout_alignLeft="@id/tv_record_desc"
        android:layout_marginTop="14dp"
        android:layout_marginBottom="16dp"
        android:textColor="@color/voucher_detail_item_color"
        android:textSize="12sp"/>

    <TextView
        android:id="@+id/tv_record_consume"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:textColor="@color/red"
        android:textSize="18sp"/>
</RelativeLayout>