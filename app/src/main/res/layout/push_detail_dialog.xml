<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:dialog="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/dialog_width"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:background="@drawable/tips_dialog_bg">

    <com.snailgame.cjg.common.widget.DialogTitleLayout
        android:id="@+id/push_detail_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        dialog:hasIcon="true"
        dialog:isRed="true" />

    <TextView
        android:id="@+id/push_detail_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/push_detail_title"
        android:layout_marginBottom="@dimen/dialog_content_bottom_margin"
        android:layout_marginLeft="@dimen/dialog_sides_margin"
        android:layout_marginRight="@dimen/dialog_sides_margin"
        android:layout_marginTop="@dimen/dialog_content_top_margin"
        android:lineSpacingMultiplier="1.3"
        android:textColor="@android:color/black"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/push_detail_submit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dialog_bottom_button_height"
        android:layout_below="@id/push_detail_content"
        android:layout_marginBottom="@dimen/dialog_bottom_bottom_margin"
        android:layout_marginLeft="@dimen/dialog_sides_margin"
        android:layout_marginRight="@dimen/dialog_sides_margin"
        android:background="@drawable/btn_scan_ok_selector"
        android:gravity="center"
        android:text="@string/btn_ok"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_big" />

</LinearLayout>