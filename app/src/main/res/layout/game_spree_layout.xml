<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include
        layout="@layout/load_more_listview_gapless"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/dimen_60dp" />

    <RelativeLayout
        android:id="@+id/commit_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/repeat_tab_bg">


        <TextView
            android:id="@+id/btn_order_spree"
            android:layout_width="@dimen/bottom_btn_state_download_width"
            android:layout_height="@dimen/bottom_btn_state_download_height"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dimen_21dp"
            android:background="@drawable/btn_yellow_selector"
            android:clickable="true"
            android:gravity="center"
            android:text="@string/order_new_spree"
            android:textColor="@android:color/white"
            android:textSize="@dimen/bottom_btn_state_download_size" />
    </RelativeLayout>

</RelativeLayout>