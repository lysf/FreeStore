<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/spreeRoot"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_item_selector"
    android:descendantFocusability="blocksDescendants"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingLeft="16dp"
    android:paddingRight="16dp">

    <include
        android:id="@+id/home_spree_logo"
        layout="@layout/simple_image_normal"
        android:layout_width="@dimen/item_app_logo"
        android:layout_height="@dimen/item_app_logo"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="@dimen/common_item_layout_margin"
        android:layout_marginTop="@dimen/common_item_layout_margin" />


    <TextView
        android:id="@+id/tv_see"
        android:layout_width="@dimen/download_btn_width"
        android:layout_height="@dimen/download_btn_height"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical|right"
        android:background="@drawable/btn_green_selector"
        android:gravity="center"
        android:text="@string/see_detail"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_normal" />

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="74dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="82dp"
        android:layout_marginRight="72dp">

        <TextView
            android:id="@+id/home_game_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lines="1"
            android:textColor="@color/primary_text_color"
            android:textSize="@dimen/text_size_big" />

        <TextView
            android:id="@+id/home_spree_title"
            style="@style/AppVersion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:ellipsize="end"
            android:lineSpacingExtra="@dimen/dimen_4dp"
            android:maxLines="2" />

    </FrameLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_height"
        android:layout_gravity="bottom"
        android:layout_marginBottom="@dimen/divider_height"
        android:background="@color/translucent_15_black" />

</FrameLayout>


