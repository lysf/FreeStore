<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="horizontal">

    <third.simplecropimage.CropImageView
            android:id="@+id/image"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@color/black"
            android:layout_x="0dip"
            android:layout_y="0dip"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:paddingLeft="50dip"
            android:paddingRight="50dip"
            android:layout_marginBottom="20dp">

        <ImageView
                android:id="@+id/discard"
                style="@style/CropButton"
                android:src="@drawable/personal_photo_cancel"/>

        <ImageView
                android:id="@+id/rotateLeft"
                style="@style/CropButton"
                android:src="@drawable/personal_photo_left"/>

        <ImageView
                android:id="@+id/rotateRight"
                style="@style/CropButton"
                android:src="@drawable/personal_photo_right"/>

        <ImageView
                android:id="@+id/save"
                style="@style/CropButton"
                android:src="@drawable/personal_photo_save"/>
    </LinearLayout>

</RelativeLayout>