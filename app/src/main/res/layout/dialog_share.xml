<?xml version="1.0" encoding="utf-8"?>
<third.BottomSheet.ClosableSlidingLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/pop_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="@string/share_to"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:drawablePadding="10dp"
            android:layout_marginLeft="20dp"
            android:drawableLeft="@drawable/ico_share_title"
            android:gravity="center_vertical" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@color/personal_dialog_line" />


        <GridView
            android:id="@+id/gridView"
            style="@style/BottomSheet.List"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fadingEdge="none"
            android:verticalSpacing="14dp"
            android:layout_marginTop="28dp"
            android:layout_marginBottom="28dp"
            android:numColumns="4" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/personal_dialog_line" />

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="240dp"
            android:layout_height="40dp"
            android:background="@drawable/btn_green_selector"
            android:clickable="true"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="@string/btn_cancel"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_big" />
    </LinearLayout>
</third.BottomSheet.ClosableSlidingLayout>