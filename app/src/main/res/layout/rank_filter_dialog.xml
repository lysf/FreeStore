<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dialog_width"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/tips_dialog_bg"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dialog_top_top_margin"
        android:paddingLeft="@dimen/dialog_sides_margin"
        android:text="@string/rank_filter_type"
        android:textColor="@color/rank_filter_type_color"
        android:textSize="12sp" />

    <GridView
        android:id="@+id/feed_type_filter_grid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_14dp"
        android:gravity="center"
        android:horizontalSpacing="10dp"
        android:numColumns="3"
        android:paddingLeft="@dimen/dimen_20dp"
        android:paddingRight="@dimen/dimen_20dp"
        android:stretchMode="columnWidth"
        android:verticalSpacing="@dimen/dimen_34dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dimen_14dp"
        android:layout_marginTop="@dimen/dimen_34dp"
        android:paddingLeft="@dimen/dialog_sides_margin"
        android:text="@string/rank_filter_area"
        android:textColor="@color/rank_filter_type_color"
        android:textSize="12sp" />

    <GridView
        android:id="@+id/country_filter_grid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnWidth="90dp"
        android:gravity="center"
        android:horizontalSpacing="10dp"
        android:numColumns="3"
        android:paddingLeft="@dimen/dimen_20dp"
        android:paddingRight="@dimen/dimen_20dp"
        android:stretchMode="columnWidth"
        android:verticalSpacing="@dimen/dimen_34dp" />

    <LinearLayout
        android:id="@+id/bottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dialog_bottom_height"
        android:layout_marginTop="@dimen/dialog_content_bottom_margin"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/dialog_bottom_bottom_margin"
        android:paddingLeft="@dimen/dialog_sides_margin"
        android:paddingRight="@dimen/dialog_sides_margin">

        <Button
            android:id="@+id/rank_cancle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="8dp"
            android:layout_weight="1"
            android:background="@drawable/btn_scan_cancle_selector"
            android:clickable="true"
            android:gravity="center"
            android:text="@string/btn_cancel"
            android:textColor="@color/black_light"
            android:textSize="@dimen/text_size_normal" />

        <Button
            android:id="@+id/rank_submit"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dp"
            android:layout_weight="1"
            android:background="@drawable/btn_scan_ok_selector"
            android:clickable="true"
            android:gravity="center"
            android:text="@string/btn_ok"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_normal" />
    </LinearLayout>
</LinearLayout>