<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">
	    <EditText
	        android:id="@+id/account_input"
	        style="@android:style/Theme.Light"
	        android:layout_width="match_parent"
	        android:layout_height="48dp"
	        android:background="@null"
	        android:paddingLeft="16dp"
	        android:singleLine="true"
	        android:ems="10"
	        android:hint="@string/snail_reg_mailaccount"
	        android:textColorHint="@color/editor_tip_color"
	        android:inputType="textEmailAddress"
	        android:textColor="@color/login_edit_color"
	        android:textSize="16sp" />
	    <View 
	        android:id="@+id/cutoff_rule1"
		    android:layout_width="match_parent"
		    android:layout_height="1px"
		    android:layout_marginLeft="16dp"
		    android:layout_marginRight="16dp"
		    android:layout_below="@id/account_input"
		    android:background="@color/cut_off_rule"/>
	
	    <EditText
	        android:id="@+id/password_input"
	        style="@android:style/Theme.Light"
	        android:layout_width="match_parent"
	        android:layout_height="48dp"
	        android:layout_below="@id/cutoff_rule1"
	        android:background="@null"
	        android:paddingLeft="16dp"
	        android:singleLine="true"
	        android:ems="10"
	        android:hint="@string/snail_input_password"
	        android:textColorHint="@color/editor_tip_color"
	        android:inputType="textPassword"
	        android:textColor="@color/login_edit_color"
	        android:textSize="16sp" />
	
	    <View 
	        android:id="@+id/cutoff_rule2"
		    android:layout_width="match_parent"
		    android:layout_height="1px"
		    android:layout_marginLeft="16dp"
		    android:layout_marginRight="16dp"
		    android:layout_below="@id/password_input"
		    android:background="@color/cut_off_rule"/>
	    <EditText
	        android:id="@+id/repassword_input"
	        style="@android:style/Theme.Light"
	        android:layout_width="match_parent"
	        android:layout_height="48dp"
	        android:layout_below="@id/cutoff_rule2"
	        android:background="@null"
	        android:paddingLeft="16dp"
	        android:singleLine="true"
	        android:ems="10"
	        android:hint="@string/snail_input_repassword"
	        android:textColorHint="@color/editor_tip_color"
	        android:inputType="textPassword"
	        android:textColor="@color/login_edit_color"
	        android:textSize="16sp" />
	</RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_gravity="center_horizontal"
        android:text="@string/snail_pass_format"
        android:textColor="@color/editor_tip_color"
        android:textSize="10sp" />

    <Button
        android:id="@+id/register_button"
        android:layout_width="280dp"
        android:layout_height="40dp"
        android:layout_marginTop="54dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/common_green_btn_selector"
        android:text="@string/snail_register"
        android:textColor="@color/white"
        android:textSize="14sp" />

</LinearLayout>