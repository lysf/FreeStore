<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/quickReturnRootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ab_btn_selector"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <include
        android:id="@+id/quickReturnIcon"
        layout="@layout/simple_image_normal"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_marginTop="@dimen/dimen_14dp"
        android:scaleType="fitXY" />

    <TextView
        android:id="@+id/quickReturnText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dimen_14dp"
        android:layout_marginTop="@dimen/dimen_8dp"
        android:ellipsize="end"
        android:gravity="center"
        android:maxEms="5"
        android:singleLine="true"
        android:textColor="@color/general_text_color"
        android:textSize="12sp" />

</LinearLayout>