<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    >

    <RelativeLayout
        android:id="@+id/app_news_container"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:background="@drawable/list_item_selector"
        android:paddingLeft="@dimen/dimen_16dp"
        android:paddingRight="@dimen/dimen_16dp"
        android:paddingTop="@dimen/common_item_layout_margin">

        <include
            android:id="@+id/app_news_icon"
            layout="@layout/simple_image_normal"
            android:layout_width="@dimen/item_app_logo"
            android:layout_height="@dimen/item_app_logo"
            android:layout_centerVertical="true"
            android:layout_marginTop="@dimen/dimen_12dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dimen_12dp"
            android:layout_toRightOf="@id/app_news_icon"
            android:gravity="left"
            android:orientation="vertical">

            <TextView
                android:id="@+id/app_news_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:ellipsize="end"
                android:includeFontPadding="false"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_16dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/app_news_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/common_oval_red"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/app_news_pre_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="18dp"
                    android:textColor="@color/search_kuwan_item_preprice_color"
                    android:textSize="12sp" />

            </LinearLayout>

        </LinearLayout>

        <View
            android:id="@+id/home_divider"
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_height"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/divider_height"
            android:background="@color/common_line_color" />
    </RelativeLayout>


</LinearLayout>