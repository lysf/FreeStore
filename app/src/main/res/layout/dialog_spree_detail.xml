<?xml version="1.0" encoding="utf-8"?>

<third.BottomSheet.ClosableSlidingLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/spree_detail_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingLeft="@dimen/dimen_16dp"
        android:paddingRight="@dimen/dimen_16dp">

        <include
            android:id="@+id/spree_logo"
            layout="@layout/simple_image_normal"
            android:layout_width="@dimen/item_app_logo"
            android:layout_height="@dimen/item_app_logo"
            android:layout_marginRight="@dimen/dimen_14dp"
            android:layout_marginTop="@dimen/dimen_16dp" />

        <TextView
            android:id="@+id/spree_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_28dp"
            android:layout_toRightOf="@id/spree_logo"
            android:ellipsize="end"
            android:maxEms="13"
            android:singleLine="true"
            android:textColor="@color/primary_text_color"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/spree_remain"
            style="@style/AppVersion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/spree_title"
            android:layout_marginTop="@dimen/dimen_14dp"
            android:layout_toRightOf="@id/spree_logo"
            android:text="@string/remain_spree" />

        <TextView
            android:id="@+id/spree_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/spree_logo"
            android:layout_marginTop="@dimen/dimen_14dp"
            android:lineSpacingExtra="@dimen/dimen_10dp"
            android:textColor="@color/child_text_color"
            android:textSize="@dimen/text_size_normal" />

        <View
            android:id="@+id/spree_divider"
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_height"
            android:layout_below="@id/spree_content"
            android:layout_marginTop="@dimen/dimen_8dp"
            android:background="@color/common_line_color" />

        <TextView
            android:id="@+id/dead_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/spree_divider"
            android:layout_marginTop="@dimen/dimen_18dp"
            android:text="@string/dead_line"
            android:textColor="@color/primary_text_color"
            android:textSize="@dimen/text_size_normal" />


        <TextView
            android:id="@+id/use_method"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/dead_time"
            android:layout_marginTop="@dimen/dimen_14dp"
            android:lineSpacingExtra="@dimen/dimen_10dp"
            android:text="@string/get_way"
            android:textColor="@color/primary_text_color"
            android:textSize="@dimen/text_size_normal" />

        <View
            android:id="@+id/exchange_divider"
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_height"
            android:layout_below="@id/use_method"
            android:layout_marginTop="@dimen/dimen_18dp"
            android:background="@color/common_line_color" />

        <TextView
            android:id="@+id/exchange"
            android:layout_width="@dimen/bottom_btn_state_download_width"
            android:layout_height="@dimen/bottom_btn_state_download_height"
            android:layout_below="@id/exchange_divider"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/dimen_10dp"

            android:layout_marginTop="@dimen/dimen_8dp"
            android:background="@drawable/btn_green_selector"
            android:clickable="true"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:textSize="@dimen/bottom_btn_state_download_size" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_below="@id/exchange" />
    </RelativeLayout>

</third.BottomSheet.ClosableSlidingLayout>
