<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/rank_bg_color"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/title_background" >

        <LinearLayout 
		    android:id="@+id/back_btn"
		    android:onClick="onClick"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/snail_back_layout_bg"
            android:focusable="true"
            android:focusableInTouchMode="false"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="@string/snail_bind_phone_number"
                android:textColor="@color/white"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:drawableLeft="@drawable/snail_back_bg"
                android:drawablePadding="16dp"
                android:textSize="18sp" />
		</LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="#c7cbd5" >
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:orientation="vertical" >

        <EditText
            android:id="@+id/snail_phonenumber_input_phonenum_edt"
            style="@android:style/Theme.Light"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:layout_marginTop="24dp"
            android:background="@android:color/white"
            android:drawableLeft="@drawable/userc_bind_phone"
            android:drawablePadding="4dp"
            android:gravity="center_vertical"
            android:paddingBottom="8dp"
            android:paddingLeft="16dp"
            android:paddingRight="8dp"
            android:paddingTop="8dp"
            android:text="@string/snail_input_phone_number"
            android:textColor="#c7c7c7"
            android:textSize="14sp" />

        <Button
            android:id="@+id/snail_gain_check_btn"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_marginRight="18dp"
            android:layout_marginTop="24dp"
            android:background="@null"
            android:text="@string/snail_gain_check"
            android:textColor="@color/title_background" />

        <EditText
            android:id="@+id/snail_input_check_edt"
            style="@android:style/Theme.Light"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:layout_marginTop="16dp"
            android:background="@android:color/white"
            android:drawableLeft="@drawable/userc_pwd"
            android:drawablePadding="4dp"
            android:gravity="center_vertical"
            android:paddingBottom="8dp"
            android:paddingLeft="16dp"
            android:paddingRight="8dp"
            android:paddingTop="8dp"
            android:text="@string/snail_reg_check"
            android:textColor="#c7c7c7"
            android:textSize="14sp" />

        <Button
            android:id="@+id/bind_phone_btn"
            android:layout_width="280dp"
            android:layout_height="40dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/common_green_btn_selector"
            android:gravity="center"
            android:text="@string/snail_confirm_bind"
            android:textColor="#ffffff"
            android:textSize="14sp" />
    </LinearLayout>

</LinearLayout>
