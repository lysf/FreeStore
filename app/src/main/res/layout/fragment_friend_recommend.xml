<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:scrollbars="none">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/content_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_48dp"
                android:text="@string/friend_recommend_title"
                android:textColor="@color/primary_text_color"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_8dp"
                android:text="@string/friend_recommend_hint"
                android:textColor="@color/general_text_color"
                android:textSize="12sp" />


            <com.snailgame.cjg.common.widget.FullGridView
                android:id="@+id/gv_recommend_friend"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/dimen_12dp"
                android:layout_marginTop="12dp"
                android:listSelector="@drawable/transparent"
                android:numColumns="3"
                android:scrollbars="none" />
        </LinearLayout>

    </RelativeLayout>
</ScrollView>
