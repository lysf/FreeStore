<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="CommonActionBar" parent="Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/translucent</item>
        <item name="background">@color/translucent</item>
        <item name="elevation">0dp</item>
    </style>


    <style name="Dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:progressBarStyle">@style/Widget.AppCompat.ProgressBar</item>
    </style>

    <!-- 自定义普通按钮样式 -->
    <style name="CustomBtnStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/btn_font_36</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:focusable">false</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_centerVertical">true</item>
    </style>


    <style name="CustomDownloadInfo">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textColor">@color/download_text_color</item>
    </style>

    <style name="CustomDownloadSpeed">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textColor">@color/red</item>
    </style>

    <style name="CustomProgressBarStyle" parent="@android:style/Widget.ProgressBar.Horizontal">
        <item name="android:indeterminateDrawable">@drawable/progress_horizontal_background</item>
        <item name="android:minHeight">4dp</item>
        <item name="android:maxHeight">3dp</item>
    </style>


    <!-- Notification bar actions -->
    <style name="NotificationAction">
        <item name="android:layout_width">@dimen/notification_action_width</item>
        <item name="android:layout_height">@dimen/notification_action_height</item>
        <item name="android:gravity">center|right</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:padding">@dimen/notification_action_padding</item>
        <item name="android:background">?android:selectableItemBackground</item>
    </style>


    <style name="AnimScale">
        <item name="@android:windowEnterAnimation">@anim/scale_enter</item>
        <item name="@android:windowExitAnimation">@anim/scale_out</item>
    </style>


    <style name="AnimScaleTop">
        <item name="@android:windowEnterAnimation">@anim/scale_top_in</item>
        <item name="@android:windowExitAnimation">@anim/scale_top_out</item>
    </style>

    <style name="AnimScaleRight">
        <item name="@android:windowEnterAnimation">@anim/scale_right_in</item>
        <item name="@android:windowExitAnimation">@anim/scale_right_out</item>
    </style>

    <style name="AnimScaleIn">
        <item name="@android:windowEnterAnimation">@anim/scale_center_in</item>
        <item name="@android:windowExitAnimation">@anim/scale_center_out</item>
    </style>

    <!-- EditText -->
    <style name="ParentEditText">
        <item name="android:background">@android:color/white</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:singleLine">true</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>


    <style name="SingleLine">
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxEms">7</item>
    </style>

    <style name="AppTitle" parent="@style/SingleLine">
        <item name="android:textColor">@color/primary_text_color</item>
        <item name="android:textSize">@dimen/text_size_big</item>
        <item name="android:layout_marginTop">12dp</item>
    </style>

    <style name="AppVersion">
        <item name="android:textColor">@color/general_text_color</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="AppDes">
        <item name="android:textColor">@color/second_text_color</item>
        <item name="android:textSize">14sp</item>
    </style>


    <style name="CustomDropDownListViewStyle" parent="@android:style/Widget.ListView.DropDown">
        <item name="android:footerDividersEnabled">false</item>
        <item name="android:listSelector">@drawable/list_seclotor_item</item>
        <item name="android:background">@color/drop_down_color</item>
    </style>


    <style name="RadioButton">
        <item name="android:background">@drawable/ab_btn_selector</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/content_frame_radio_text_size</item>
        <item name="android:padding">@dimen/radio_btn_padding</item>
    </style>

    <style name="CustomDetailBtnStyle">
        <item name="android:layout_width">160dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:gravity">center</item>

    </style>


    <!--swip_back_styles.xml-->
    <style name="SwipeBackLayout">
        <item name="edge_size">50dip</item>
        <item name="shadow_left">@drawable/shadow_left</item>
        <item name="shadow_right">@drawable/shadow_right</item>
        <item name="shadow_bottom">@drawable/shadow_bottom</item>
    </style>

    <style name="AppBase.NoTitleBar">
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="AppBase.NoTitleBar.Fullscreen">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>


    <style name="PopupDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <!-- 边框 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- 半透明 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 无标题 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 自己想要的背景 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 模糊 -->
    </style>


    <style name="bind_edittext_style" parent="@android:style/Widget.EditText">
        <item name="android:background">@drawable/bind_edittext_selector</item>
    </style>


    <style name="horizonal_progressBar" parent="@android:style/Widget.ProgressBar.Horizontal">
        <item name="android:indeterminateDrawable">@drawable/progress_indeterminate_horizontal
        </item>
    </style>

    <style name="CropButton">
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/ab_btn_selector</item>
    </style>

    <style name="ratingBarLittle" parent="android:Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/ratingbar_little_drawable</item>
        <item name="android:minHeight">12.5dp</item>
        <item name="android:maxHeight">12.5dp</item>
    </style>

    <style name="ratingBarSmall" parent="android:Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/ratingbar_drawable</item>
        <item name="android:minHeight">14dp</item>
        <item name="android:maxHeight">14dp</item>
    </style>

    <style name="detailRatingBarSmall" parent="android:Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/detail_ratingbar_drawable</item>
        <item name="android:minHeight">14dip</item>
        <item name="android:maxHeight">14dip</item>
    </style>

    <style name="ratingBarGray" parent="android:Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/ratingbar_gray_drawable</item>
        <item name="android:minHeight">14dp</item>
        <item name="android:maxHeight">14dp</item>
    </style>

    <style name="ratingBarBig" parent="android:Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/ratingbar_big_drawable</item>
        <item name="android:minHeight">25dp</item>
        <item name="android:maxHeight">25dp</item>
    </style>

    <!-- Engine -->
    <style name="MonitorText" />

    <style name="MonitorText.7B" parent="@style/MonitorText">
        <item name="android:textColor">#7b7b7b</item>
    </style>

    <style name="MonitorText.18X7B" parent="@style/MonitorText.7B">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="MonitorText.14X7B" parent="@style/MonitorText.7B">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="MonitorText.12X7B" parent="@style/MonitorText.7B">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="MonitorText.00" parent="@style/MonitorText">
        <item name="android:textColor">#000000</item>
    </style>

    <style name="MonitorText.22X00" parent="@style/MonitorText.00">
        <item name="android:textSize">22sp</item>
    </style>

    <style name="MonitorText.20X00" parent="@style/MonitorText.00">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="MonitorText.18X00" parent="@style/MonitorText.00">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="MonitorText.14X00" parent="@style/MonitorText.00">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="MonitorText.14XFF" parent="@style/MonitorText.00">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#ffffffff</item>
    </style>

    <style name="MonitorText.12X00" parent="@style/MonitorText.00">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="MonitorText.AC" parent="@style/MonitorText">
        <item name="android:textColor">#acacac</item>
    </style>

    <style name="MonitorText.14XAC" parent="@style/MonitorText.AC">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="MonitorText.FC" parent="@style/MonitorText">
        <item name="android:textColor">#fc5353</item>
    </style>

    <style name="MonitorText.18XFC" parent="@style/MonitorText.FC">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="person_quick_enter_style">

        <item name="android:gravity">center</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:drawablePadding">4dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="AppThemeToolbar" parent="Widget.AppCompat.Toolbar">
        <item name="contentInsetStart">0dp</item>
        <item name="elevation">0dp</item>
    </style>

    <style name="BottomSheet" />

    <style name="BottomSheet.Dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:textColor">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:backgroundDimAmount">0.3</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowAnimationStyle">@style/BottomSheet.Animation</item>
        <item name="android:textColorPrimary">#DD000000</item>
        <item name="android:textColorSecondary">#8A000000</item>
        <item name="android:textColorHint">#42000000</item>
    </style>

    <style name="BottomSheet.List">
        <item name="android:listSelector">@drawable/list_item_selector</item>
        <item name="android:drawSelectorOnTop">false</item>
        <item name="android:layoutAnimation">@anim/bs_list_layout_anim_in</item>
        <item name="android:clipToPadding">false</item>
    </style>

    <style name="BottomSheet.Animation">
        <item name="android:windowEnterAnimation">@anim/dock_bottom_enter</item>
        <item name="android:windowExitAnimation">@anim/dock_bottom_exit</item>
    </style>

</resources>