<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_spree_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size_little"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_spree_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginLeft="@dimen/dimen_32dp"
        android:layout_marginRight="@dimen/dimen_32dp"
        android:layout_marginTop="@dimen/dimen_12dp"
        android:textSize="@dimen/text_size_normal"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_get_gift"
        android:layout_width="@dimen/dimen_100dp"
        android:layout_height="@dimen/dimen_32dp"
        android:layout_marginTop="@dimen/dimen_32dp"
        android:background="@drawable/channel_app_git_get_bg"
        android:gravity="center"
        android:text="@string/get_gift"
        android:textColor="@color/green"
        android:textSize="@dimen/text_size_normal" />
</LinearLayout>