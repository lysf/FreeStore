<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent">

    <ImageView
            android:id="@+id/ivMemoryClean"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:scaleType="centerInside"
            android:layout_gravity="center"
            />
    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:visibility="gone"
            tools:visibility="visible"
            android:id="@+id/layout_number"
            android:gravity="center"
            >
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_marginBottom="4dp"
                android:text="@string/save_for_you"
                android:textColor="#7f7f7f"/>
        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal" >
            <third.com.snail.trafficmonitor.ui.widget.RiseNumberTextview.RiseNumberTextView
                    android:id="@+id/tv_save_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="30sp"
                    tools:text="1023.99"
                    android:textColor="#3e3e3e"/>
            <TextView
                    android:id="@+id/tv_save_unit"
                    tools:text="MB"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textColor="#3e3e3e"/>
        </LinearLayout>
        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >
            <TextView
                    android:id="@+id/tv_available_memory"
                    android:text="@string/avail_memory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="11sp"
                    android:visibility="gone"
                    android:textColor="#f24646"/>
            <third.com.snail.trafficmonitor.ui.widget.RiseNumberTextview.RiseNumberTextView
                    android:id="@+id/tv_avail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="36"
                    android:typeface="normal"
                    android:textSize="11sp"
                    android:textColor="#f24646"/>
            <TextView
                    android:id="@+id/tv_available_unit"
                    tools:text="MB"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="11sp"
                    android:textColor="#f24646"/>
            <TextView
                    android:id="@+id/tv_total"
                    tools:text="1.08GB"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="11sp"
                    android:textColor="#3e3e3e"/>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>