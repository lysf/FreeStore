<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_item_selector"
    android:orientation="vertical"
    android:paddingLeft="@dimen/dimen_8dp"
    android:paddingRight="@dimen/dimen_8dp">

    <include layout="@layout/common_horizontal_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"

            android:orientation="vertical"
            android:paddingBottom="14dp"
            android:paddingRight="8dp"
            android:paddingTop="17dp">

            <TextView
                android:id="@+id/tv_spree_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:singleLine="true"
                android:textColor="@color/primary_text_color"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_cd_key"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_8dp"
                android:layout_marginTop="10dp"
                android:singleLine="true"
                android:textColor="@color/general_text_color"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_spree_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_8dp"
                android:layout_marginTop="10dp"
                android:lineSpacingMultiplier="1.2"
                android:lines="2"
                android:textColor="@color/general_text_color"
                android:textSize="14sp" />
        </LinearLayout>


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/btn_spree_get"
                android:layout_width="@dimen/download_btn_width"
                android:layout_height="@dimen/download_btn_height"
                android:layout_centerInParent="true"
                android:layout_marginLeft="@dimen/download_btn_margin_left"
                android:layout_marginRight="@dimen/download_btn_margin_right"
                android:background="@drawable/btn_exchange_selector"
                android:clickable="true"
                android:gravity="center"
                android:text="@string/not_get"
                android:textColor="@color/btn_green_normal"
                android:textSize="@dimen/text_size_normal" />


        </RelativeLayout>


    </LinearLayout>

    <RelativeLayout
        android:id="@+id/toggle_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone">

        <include layout="@layout/common_horizontal_line" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_48dp"
            android:gravity="center"
            android:text="@string/spree_more"
            android:textColor="@color/general_text_color"
            android:textSize="14sp" />
    </RelativeLayout>

</LinearLayout>