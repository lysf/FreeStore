<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="bottom"
            android:paddingBottom="@dimen/dimen_8dp"
            android:paddingLeft="16dp"
            android:text="@string/snial_account"
            android:textColor="@color/progress_text_gray"
            android:textSize="12sp" />


        <com.snailgame.cjg.common.widget.AccountSafeItem
            android:id="@+id/personal_account"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/list_item_selector" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="bottom"
            android:paddingBottom="@dimen/dimen_8dp"
            android:paddingLeft="16dp"
            android:text="@string/edit_personal_info"
            android:textColor="@color/progress_text_gray"
            android:textSize="12sp" />


        <com.snailgame.cjg.common.widget.AccountSafeItem
            android:id="@+id/personal_icon"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/list_item_selector" />

        <include
            layout="@layout/common_horizontal_line"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="@dimen/dimen_16dp" />

        <com.snailgame.cjg.common.widget.AccountSafeItem
            android:id="@+id/personal_nickname"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/list_item_selector" />

        <include
            layout="@layout/common_horizontal_line"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="@dimen/dimen_16dp" />

        <com.snailgame.cjg.common.widget.AccountSafeItem
            android:id="@+id/personal_birthday"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/list_item_selector" />

        <include
            layout="@layout/common_horizontal_line"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="@dimen/dimen_16dp" />

        <com.snailgame.cjg.common.widget.AccountSafeItem
            android:id="@+id/personal_phone"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/list_item_selector" />


        <LinearLayout
            android:id="@+id/privilege_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="bottom"
                android:paddingBottom="@dimen/dimen_8dp"
                android:paddingLeft="16dp"
                android:text="@string/personal_privileage"
                android:textColor="@color/progress_text_gray"
                android:textSize="12sp" />


            <LinearLayout
                android:id="@+id/privilege_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="bottom"
            android:paddingBottom="@dimen/dimen_8dp"
            android:paddingLeft="16dp"
            android:text="@string/account_safe"
            android:textColor="@color/progress_text_gray"
            android:textSize="12sp" />


        <com.snailgame.cjg.common.widget.AccountSafeItem
            android:id="@+id/snail_resetpwd_edit"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/list_item_selector" />

        <include
            layout="@layout/common_horizontal_line"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="@dimen/dimen_16dp" />

        <com.snailgame.cjg.common.widget.AccountSafeItem
            android:id="@+id/account_protect"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="@dimen/dimen_20dp"
            android:background="@drawable/list_item_selector" />

    </LinearLayout>
</ScrollView>