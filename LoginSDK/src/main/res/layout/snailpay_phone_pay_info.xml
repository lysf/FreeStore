<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#f1f1f1"
    android:orientation="vertical" >

    <include
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        layout="@layout/snailpay_title_layout" />

    <LinearLayout 
        android:id="@+id/snailpay_phone_pay_info_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:orientation="vertical"
        >
	    <EditText
	        android:id="@+id/snailpay_phone_pay_info_cardname"
	        style="@android:style/Theme.Light"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:background="@drawable/snail_green_text_selector"
	        android:textColorHint="#e0e0e0"
	       	android:singleLine="true"
	       	android:textColor="#000000"
	       	android:hint="@string/snailpay_phone_pay_info_cardname"
	       	android:textSize="14sp" />
	    
	    <EditText
	        android:id="@+id/snailpay_phone_pay_info_idno"
	        style="@android:style/Theme.Light"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:inputType="number"
	        android:background="@drawable/snail_green_text_selector"
	        android:textColorHint="#e0e0e0"
	       	android:singleLine="true"
	       	android:hint="@string/snailpay_phone_pay_info_idno"
	       	android:textColor="#000000"
	       	android:layout_marginTop="10dp"
	       	android:textSize="14sp" />
	    
	    <TextView
	        android:id="@+id/snailpay_phone_pay_info_bankaddr"
	        style="@android:style/Theme.Light"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:background="@drawable/snail_green_text_selector"
	        android:textColorHint="#e0e0e0"
	       	android:singleLine="true"
	       	android:hint="@string/snailpay_phone_pay_info_bankaddr"
	       	android:textColor="#000000"
	       	android:layout_marginTop="10dp"
	       	android:textSize="14sp" />
	    
	    <EditText
	        android:id="@+id/snailpay_phone_pay_info_idcardaddr"
	        style="@android:style/Theme.Light"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:background="@drawable/snail_green_text_selector"
	        android:textColorHint="#e0e0e0"
	       	android:singleLine="true"
	       	android:hint="@string/snailpay_phone_pay_info_idcardaddr"
	       	android:textColor="#000000"
	       	android:layout_marginTop="10dp"
	       	android:textSize="14sp" />
	    
   	    <EditText
	        android:id="@+id/snailpay_phone_pay_info_bankphoneno"
	        style="@android:style/Theme.Light"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:inputType="number"
	        android:background="@drawable/snail_green_text_selector"
	        android:textColorHint="#e0e0e0"
	       	android:singleLine="true"
	       	android:hint="@string/snailpay_phone_pay_info_bankphoneno"
	       	android:textColor="#000000"
	       	android:layout_marginTop="10dp"
	       	android:textSize="14sp" />
	    
	    <TextView
	        android:id="@+id/snailpay_phone_pay_info_idtype"
	        style="@android:style/Theme.Light"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:background="@drawable/snail_green_text_selector"
	        android:textColorHint="#e0e0e0"
	       	android:singleLine="true"
	       	android:hint="@string/snailpay_phone_pay_info_idtype"
	       	android:textColor="#000000"
	       	android:layout_marginTop="10dp"
	       	android:textSize="14sp" />
	    
	    <EditText
	        android:id="@+id/snailpay_phone_pay_info_username"
	        style="@android:style/Theme.Light"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:background="@drawable/snail_green_text_selector"
	        android:textColorHint="#e0e0e0"
	       	android:singleLine="true"
	       	android:hint="@string/snailpay_phone_pay_info_username"
	       	android:textColor="#000000"
	       	android:layout_marginTop="10dp"
	       	android:textSize="14sp" />
	    
	    <EditText
	        android:id="@+id/snailpay_phone_pay_info_phoneno"
	        style="@android:style/Theme.Light"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:inputType="number"
	        android:background="@drawable/snail_green_text_selector"
	        android:textColorHint="#e0e0e0"
	       	android:singleLine="true"
	       	android:hint="@string/snailpay_phone_pay_info_phoneno"
	       	android:textColor="#000000"
	       	android:layout_marginTop="10dp"
	       	android:textSize="14sp" />
	    
	    <TextView
	        android:id="@+id/snailpay_phone_pay_info_saleaddr"
	        style="@android:style/Theme.Light"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:background="@drawable/snail_green_text_selector"
	        android:textColorHint="#e0e0e0"
	       	android:singleLine="true"
	       	android:hint="@string/snailpay_phone_pay_info_saleaddr"
	       	android:textColor="#000000"
	       	android:layout_marginTop="10dp"
	       	android:textSize="14sp" />
	    
	    <EditText
	        android:id="@+id/snailpay_phone_pay_info_ip"
	        style="@android:style/Theme.Light"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:background="@drawable/snail_green_text_selector"
	        android:textColorHint="#e0e0e0"
	       	android:singleLine="true"
	       	android:textColor="#000000"
	       	android:layout_marginTop="10dp"
	       	android:textSize="14sp" />
	    
	    <Button
            android:id="@+id/snailpay_phone_pay_sure"
            android:layout_width="300dp"
            android:layout_height="48dp"
            android:layout_marginBottom="40dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="16dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:background="@drawable/snailpay_click_button"
            android:text="@string/snailpay_recharge_confirm"
            android:textColor="#ffffff"
            android:textSize="18sp" />
    </LinearLayout>
</LinearLayout>