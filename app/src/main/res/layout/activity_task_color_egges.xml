<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/eggs_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/translucent_70_black">

    <FrameLayout
        android:id="@+id/dialog_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" />

    <ImageView
        android:id="@+id/iv_click_surprise"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="120dp"
        android:background="@drawable/click_surprise"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/iv_color_eggs_light"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/task_eggs_light"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/iv_color_eggs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/task_eggs" />

</RelativeLayout>