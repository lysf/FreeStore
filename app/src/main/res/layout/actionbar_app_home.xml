<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/red">


    <FrameLayout
            android:id="@+id/menuToggle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true">

        <TextView
                android:id="@+id/tv_ab_menu"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:drawableLeft="@drawable/ab_home_icon_normal"
                android:text="@string/app_name"
                android:textColor="@color/actionbar_title_color"
                android:textSize="22sp"
                android:paddingBottom="2dp"
                android:background="@drawable/ab_btn_selector"/>

        <TextView
                android:id="@+id/actionbar_update_msg"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_gravity="left|top"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/msg_num_while_bg"
                android:gravity="center"
                android:visibility="gone"
                android:textColor="@color/red"
                android:textSize="@dimen/text_size_little"/>

    </FrameLayout>

    <!--<ImageView-->
            <!--android:id="@+id/iv_network_indicate"-->
            <!--android:layout_width="@dimen/action_bar_icon_width"-->
            <!--android:layout_height="@dimen/action_bar_icon_height"-->
            <!--android:layout_centerVertical="true"-->
            <!--android:layout_gravity="center_vertical"-->
            <!--android:layout_toRightOf="@id/menuToggle"-->
            <!--android:src="@drawable/unfree_indicate_selector"-->
        <!--/>-->

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:orientation="horizontal">


        <ImageView
                android:id="@+id/iv_ab_search"
                android:layout_width="@dimen/action_bar_icon_width"
                android:layout_height="@dimen/action_bar_icon_height"
                android:clickable="true"
                android:background="@drawable/ab_btn_selector"
                android:src="@drawable/ic_ab_search_normal"/>

        <ImageView
                android:id="@+id/treasurebox"
                android:layout_width="@dimen/action_bar_icon_width"
                android:layout_height="@dimen/action_bar_icon_height"
                android:clickable="true"
                android:background="@drawable/ab_btn_selector"
                android:src="@drawable/ic_manage_icon_normal"/>

        <TextView
                android:id="@+id/notice_area"
                android:layout_width="@dimen/action_bar_icon_width"
                android:layout_height="@dimen/action_bar_icon_height"
                android:background="@drawable/notice_icon_none"
                android:gravity="center"
                android:textColor="@color/red"
                android:textSize="14sp"
                android:textStyle="bold"/>
    </LinearLayout>

</RelativeLayout>