<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/home_banner_height"
    android:background="@drawable/ic_home_banner_bg"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_user_local_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_20dp"
        android:layout_marginTop="76dp"
        android:drawableLeft="@drawable/ic_mobile_location"
        android:drawablePadding="@dimen/dimen_4dp"
        android:text="江苏1709501"
        android:textColor="@color/translucent_80_white"
        android:textSize="12sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_20dp"
        android:text="欢迎您,蜗牛移动信联合预计用户"
        android:textColor="@color/translucent_80_white"
        android:textSize="10sp" />


    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginBottom="@dimen/dimen_10dp"
        android:layout_marginTop="@dimen/dimen_10dp"
        android:background="@color/translucent_20_white" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true">

                <ImageView
                    android:id="@+id/iv_mobile_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@drawable/ic_mobile_money" />

                <TextView
                    android:id="@+id/tv_mobile_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_8dp"
                    android:layout_toRightOf="@id/iv_mobile_money"
                    android:text="3432"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dimen_20dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_mobile_money"
                    android:layout_marginLeft="@dimen/dimen_8dp"
                    android:layout_toRightOf="@id/iv_mobile_money"
                    android:text="兔兔币余额"
                    android:textColor="@color/translucent_70_white"
                    android:textSize="10sp" />


            </RelativeLayout>


        </RelativeLayout>

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/translucent_20_white" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true">

                <ImageView
                    android:id="@+id/iv_mobile_flow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@drawable/ic_mobile_flow" />


                <TextView
                    android:id="@+id/tv_mobile_flow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_8dp"
                    android:layout_toRightOf="@id/iv_mobile_flow"
                    android:text="7.9"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dimen_20dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/tv_mobile_flow"
                    android:layout_toRightOf="@id/tv_mobile_flow"
                    android:text="MB"
                    android:textColor="@color/white"
                    android:textSize="10sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_mobile_flow"
                    android:layout_marginLeft="@dimen/dimen_8dp"
                    android:layout_toRightOf="@id/iv_mobile_flow"
                    android:text="剩余流量"
                    android:textColor="@color/translucent_70_white"
                    android:textSize="10sp" />


            </RelativeLayout>

        </RelativeLayout>

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/translucent_20_white" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true">

                <ImageView
                    android:id="@+id/iv_mobile_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@drawable/ic_mobile_calltime" />

                <TextView
                    android:id="@+id/tv_mobile_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_8dp"
                    android:layout_toRightOf="@id/iv_mobile_time"
                    android:text="50"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dimen_20dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/tv_mobile_time"
                    android:layout_toRightOf="@id/tv_mobile_time"
                    android:text="分钟"
                    android:textColor="@color/white"
                    android:textSize="10sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_mobile_time"
                    android:layout_marginLeft="@dimen/dimen_8dp"
                    android:layout_toRightOf="@id/iv_mobile_time"
                    android:text="剩余时长"
                    android:textColor="@color/translucent_70_white"
                    android:textSize="10sp" />
            </RelativeLayout>

        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_mobile_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dimen_16dp"
            android:drawableLeft="@drawable/ic_mobile_delaytime"
            android:drawablePadding="@dimen/dimen_4dp"
            android:text="截至时间:2016/05/31 16：23"
            android:textColor="@color/translucent_70_white"
            android:textSize="10sp" />
    </RelativeLayout>
</LinearLayout>