<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="afterDescendants"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:descendantFocusability="afterDescendants"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/sort_item_left"
            android:layout_width="0dp"
            android:layout_height="@dimen/app_sort_item_height"
            android:layout_weight="1"
            android:background="@drawable/common_selector_sort_item"
            android:focusable="true"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal">

                <include
                    android:id="@+id/sort_item_image_left"
                    layout="@layout/simple_image_normal"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_marginTop="32dp"
                    android:contentDescription="@string/descr_image"
                    android:scaleType="centerInside"
                    android:src="@drawable/loading_ico_color" />

                <TextView
                    android:id="@+id/sort_item_title_left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/app_sort_item_title_margin_left"
                    android:layout_marginTop="26dp"
                    android:layout_toRightOf="@id/sort_item_image_left"
                    android:textColor="@color/black"
                    android:textSize="@dimen/app_sort_item_title_size" />
            </RelativeLayout>

            <TextView
                android:id="@+id/sort_item_desc_left"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="8dp"
                android:textColor="@color/download_manage_item_version"
                android:textSize="@dimen/text_size_little" />
        </LinearLayout>

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:layout_marginBottom="20dip"
            android:layout_marginTop="20dip"
            android:background="@color/gray" />

        <LinearLayout
            android:id="@+id/sort_item_right"
            android:layout_width="0dp"
            android:layout_height="@dimen/app_sort_item_height"
            android:layout_weight="1"
            android:background="@drawable/common_selector_sort_item"
            android:focusable="true"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal">

                <include
                    android:id="@+id/sort_item_image_right"
                    layout="@layout/simple_image_normal"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_marginTop="32dp"
                    android:contentDescription="@string/descr_image"
                    android:scaleType="centerInside"
                    android:src="@drawable/loading_ico_color" />

                <TextView
                    android:id="@+id/sort_item_title_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/app_sort_item_title_margin_left"
                    android:layout_marginTop="26dp"
                    android:layout_toRightOf="@id/sort_item_image_right"
                    android:textColor="@color/black"
                    android:textSize="@dimen/app_sort_item_title_size" />
            </RelativeLayout>


            <TextView
                android:id="@+id/sort_item_desc_right"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="8dp"
                android:textColor="@color/download_manage_item_version"
                android:textSize="@dimen/text_size_little" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/gray" />

</LinearLayout>