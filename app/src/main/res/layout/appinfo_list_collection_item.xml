<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/list_item_selector"
              android:orientation="vertical"
              android:paddingLeft="@dimen/dimen_16dp"
              android:paddingRight="@dimen/dimen_16dp">




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <include
            android:id="@+id/iv_collect_icon"
            layout="@layout/simple_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dimen_12dp"
            android:scaleType="fitXY"/>

        <TextView
            android:id="@+id/tv_collect_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="16sp"/>
    </LinearLayout>


    <include
        android:id="@+id/app_pic_item"
        layout="@layout/simple_image_banner_overlay_roundcorner"
        android:layout_width="match_parent"
        android:layout_height="@dimen/banner_height"
        android:scaleType="fitXY"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/common_item_layout_margin"
        android:layout_marginTop="12dp">

        <LinearLayout
            android:id="@+id/collection_item_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="horizontal"/>

        <TextView
            android:id="@+id/tv_view"
            android:layout_width="@dimen/download_btn_width"
            android:layout_height="@dimen/download_btn_height"
            android:layout_alignParentRight="true"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="8dp"
            android:background="@drawable/btn_green_selector"
            android:clickable="true"
            android:gravity="center"
            android:text="@string/see_detail"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_normal"/>
    </RelativeLayout>
    <View  android:id="@+id/home_divider"
          android:layout_width="match_parent"
          android:layout_height="@dimen/divider_height"
          android:background="@color/common_line_color"
        android:layout_marginBottom="@dimen/divider_height"
        />
</LinearLayout>
